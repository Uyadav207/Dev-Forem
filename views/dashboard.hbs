<h5 class="dashboard">Dashboard</h5>
<h3 class="author">Author : {{name}}</h3>
<p class="stories_marker">Here are the list of stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                 <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status" >{{status}}</span></td>
                    <td>
                        <p class="icons">
                        <a href="/stories/edit/{{_id}}">
                        <i class="fas fa-pencil-alt"></i>
                        </a>
                        <form action="/stories/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="delete" type="submit"><a><i class="fas fa-trash"></i></a></button>
                        </form>
                        </p>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p class="no-story">You have not created any stories</p> 
{{/if}}

